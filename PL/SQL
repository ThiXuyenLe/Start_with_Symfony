1. View
1.1 zwischen 2 Tabelle
create VIEW v_mitarbeiterwaehrungseinheiten as SELECT mitarbeiter.name, mitarbeiter.vorname, mitarbeiter.email, mitarbeiter.db_user,
waehrungseinheiten.bezeichnung, waehrungseinheiten.land
FROM mitarbeiter, waehrungseinheiten
WHERE mitarbeiter.land = "Schweiz"

